#---------------------------------------------------------
# Run a command with pipe getting stdout
import subprocess
p = subprocess.run("date | cut -d' ' -f2", shell=True, stdout=subprocess.PIPE)
print(p.stdout.decode('UTF-8'))

#---------------------------------------------------------
