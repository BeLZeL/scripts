===============================================================================

-- Execute query every SEC seconds
#!/usr/bin/env bash
set -o errexit
set -o pipefail
set -o nounset

cat <<EOQ | PGOPTIONS='--client-min-messages=warning' /usr/bin/psql -Xq -v ON_ERROR_STOP=1 --pset pager=off -U <user> -h <host> <db>
select * from table
\watch 30
;
EOQ


